<% if book.favorited_by?(current_user) %>
    <td>
      <%= link_to book_likes_path(book.id), method: :delete, class: "like", remote: true do %>
        <i class="fas fa-heart"></i>
        <%= book.likes.count %>
      <% end %>
    </td>
<% else %>
    <td>
      <%= link_to book_likes_path(book.id), method: :post, class: "unlike", remote: true do %>
        <i class="fas fa-heart"></i>
        <%= book.likes.count %>
      <% end %>
    </td>
<% end %>
