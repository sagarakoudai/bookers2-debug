 <tbody class="comment_<%= book.id %>">
    <% book.book_comments.each do |comment| %>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= comment.bo %></td>
        <!--(bo = body)-->
        <% if comment.user_id == current_user.id %>
        <td><%= link_to 'Destroy', book_book_comment_path(comment.book_id, comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
</tbody>