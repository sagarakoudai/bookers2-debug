<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user  %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book2 %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <% if Like.find_by(user_id: current_user.id, book_id: @book.id) %>
            <td><%= link_to like_path(@book), method: :delete, class: "like" do %>
               <i class="fas fa-heart"><%= @likes_count %></i>
            <% end %>
            </td>
          <% else %>
            <td><%= link_to likes_path(@book), method: :post, class: "liked" do %>
               <i class="fas fa-heart"><%= @likes_count %></i>
            <% end %>
            </td>
          <% end %>
          <% if @book.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>
        <tbody>
          <% @comments.each do |comment| %>
          <tr>
            <td><%= link_to user_path(@book.user) do %>
          <%= attachment_image_tag(@book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
          </td>
          <td><%= comment.bo %></td>
          <td><%= link_to 'Destroy', book_book_comment_path(:id), method: :delete, class: "btn btn-sm btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= form_with model:@comment, url: book_book_comments_path(@book), local:true do |f| %>
        <div>
        <%= f.text_area :bo, class: "form-control comment_bo" %>
        <%= f.hidden_field :book_id, value: @book.id %>
        </div>
        <%= f.submit class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>